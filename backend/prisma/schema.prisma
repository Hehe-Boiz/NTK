generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  id String @id @unique
  name String
  outlineUrl String
}

model Wish {
  id Int @id @default(autoincrement())
  content String

  user User @relation(fields: [userName], references: [name])
  userName String
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  password String
  role Role
  wish Wish[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}